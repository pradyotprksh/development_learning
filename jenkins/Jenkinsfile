pipeline {
    agent any

    environment {
        ANDROID_SCRIPT = '../../scripts/android_script.py'
        JENKINS_SETUP_SCRIPT = './scripts/jenkins_setup.py'
        KOTLIN_SCRIPT = '../../../scripts/kotlin_script.py'
        RUST_SCRIPT = '../../scripts/rust_script.py'
    }

    stages {
        stage('JenkinsSetup Clone') {
            steps {
                script {
                    sh "python3 ${env.JENKINS_SETUP_SCRIPT}"
                }
            }
        }

        stage('Projects Checkup') {
            parallel {
                // Android
                stage('JenkinsLearning project') {
                    steps {
                        dir('./android/JenkinsLearning') {
                            script {
                                sh "python3 ${env.ANDROID_SCRIPT} JenkinsLearning"
                                sh './gradlew lint'
                                sh './gradlew testDebugUnitTest'
                                sh './gradlew build'
                            }
                        }
                    }
                }
                // stage('Library/Owner project') {
                //     steps {
                //         dir('./android/Library/Owner') {
                //             script {
                //                 sh "python3 ../${env.ANDROID_SCRIPT} Library/Owner"
                //                 sh './gradlew lint'
                //                 sh './gradlew testDebugUnitTest'
                //                 sh './gradlew build'
                //             }
                //         }
                //     }
                // }
                // stage('PingWar') {
                //     steps {
                //         dir('./android/PingWar') {
                //             script {
                //                 sh "python3 ${env.ANDROID_SCRIPT} PingWar"
                //                 sh './gradlew lint'
                //                 sh './gradlew testDebugUnitTest'
                //                 sh './gradlew build'
                //             }
                //         }
                //     }
                // }
                // stage('Rental') {
                //     steps {
                //         dir('./android/Rental') {
                //             script {
                //                 sh "python3 ${env.ANDROID_SCRIPT} Rental"
                //                 sh './gradlew lint'
                //                 sh './gradlew testDebugUnitTest'
                //                 sh './gradlew build'
                //             }
                //         }
                //     }
                // }
            }
        }
    }
}