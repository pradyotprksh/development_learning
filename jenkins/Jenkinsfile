pipeline {
    agent any

    stages {
        stage('Build Android Project') {
            steps {
                echo 'Checking out the Android project'
                dir('./android/JenkinsLearning') {
                    script {
                        writeFile file: 'local.properties', text: 'sdk.dir=/Users/pradyotprakash/Library/Android/sdk'
                        echo "==== Build Command ===="
                        sh './gradlew build'
                    }
                }
            }
        }
    }
}
