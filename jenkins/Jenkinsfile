pipeline {
    agent any

    stages {
        stage('Build Android Project') {
            steps {
                echo 'Checking out the Android project'
                dir('./android/JenkinsLearning') {
                    script {
                        echo "sdk.dir=/Users/pradyotprakash/Library/Android/sdk" > local.properties
                        echo 'Running ./gradlew build'
                        sh './gradlew build'
                    }
                }
            }
        }
    }
}
